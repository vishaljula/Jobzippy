rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /referrals/{refId} {
      allow create: if request.auth != null && request.auth.uid == request.resource.data.referrerId;

      allow read: if request.auth != null && (
        request.auth.uid == resource.data.referrerId ||
        request.auth.uid == resource.data.referredId
      );

      allow update: if request.auth != null && request.auth.uid == resource.data.referrerId;

      allow delete: if false;
    }
  }
}

